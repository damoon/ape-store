allow_k8s_contexts(os. geten("ALLOW_TILT_CONTEXT"))

def helmfile(file):
  return local("helmfile -f %s template" % file)

# Tell Tilt to apply to k8s config generated by helmfile.
k8s_yaml(helmfile("kafka.yaml"))
